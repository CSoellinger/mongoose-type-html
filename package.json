{
  "name": "mongoose-type-html",
  "version": "0.0.1",
  "description": "An html field-type with sanitize-html and dompurify options",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "clean": "./node_modules/.bin/rimraf ./lib",
    "test": "./node_modules/.bin/nyc --check-coverage --lines 100 ./node_modules/.bin/mocha --reporter progress",
    "test:watch": "./node_modules/.bin/mocha -w --reporter min",
    "lint": "./node_modules/.bin/tslint {src,test}/**/*.ts --format stylish",
    "pretest": "npm run build",
    "release": "./node_modules/.bin/release-it -p -n",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CSoellinger/mongoose-type-html.git"
  },
  "keywords": [
    "mongoose",
    "schema",
    "type",
    "html",
    "xss",
    "sanitizer",
    "sanitize-html",
    "purifier",
    "dompurify"
  ],
  "author": "Christopher SÃ¶llinger <dev@csoellinger.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CSoellinger/mongoose-type-html/issues"
  },
  "homepage": "https://github.com/CSoellinger/mongoose-type-html",
  "devDependencies": {
    "@types/chai": "^4.0.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/deepmerge": "^1.3.3",
    "@types/dompurify": "^0.0.31",
    "@types/jsdom": "^11.0.4",
    "@types/mocha": "^2.2.44",
    "@types/mongoose": "^4.7.28",
    "@types/node": "^8.0.53",
    "@types/q": "^1.0.6",
    "@types/sanitize-html": "^1.14.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "deepmerge": "^2.0.1",
    "dompurify": "*",
    "jsdom": "^11.5.1",
    "kind-of": "^6.0.1",
    "mocha": "^4.0.1",
    "mockgoose": "^7.3.3",
    "mongoose": "*",
    "nyc": "^11.3.0",
    "q": "^1.5.1",
    "release-it": "^5.0.0",
    "rimraf": "^2.6.2",
    "sanitize-html": "*",
    "source-map-support": "^0.5.0",
    "ts-mocha": "^1.0.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "peerDependencies": {
    "dompurify": "*",
    "mongoose": "*",
    "sanitize-html": "*"
  },
  "dependencies": {},
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
